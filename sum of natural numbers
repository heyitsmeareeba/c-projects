#include<iostream>

using namespace std;
 int main(){
 	int n, sum=0;
 	cout<<"Enter the value of N:  ";
 	cin>>n;
 	for(int i=1; i<=n; i++)
 	{   
 	
 	    cout<<i;
 	    if(i!=n)
	   
 	    {
 	    	cout<<'+';
		 }
		 
	
	else
	cout<<"=";
 		sum=i+sum;

 	}
 	cout<<sum;
 	cout<<"\nSum of first "<<n<<" is natural numbers:  "<<sum<<endl;
 	return 0;
 }
